                        $('#msgok').html('<div class="alert alert-success" style="width: 100%;" role="alert">註冊成功,請重新登入</div>');
                        setTimeout(function () { window.location.reload(); }, 1000);
                        //window.location.reload();  //重新整理
                    }
                    else if (result.toString() == "emaildouble") {

                        $('#msgregister').html('<div class="alert alert-warning" style="width: 100%; text-align:center;" role="alert">Email已經被註冊, 請換一個重新註冊!</div>');
                        setTimeout(function () {$('#msgregister').html('');}, 3000);

                    }
                    else {

                        //alert(result);
                        $('#msgregister').html('<div class="alert alert-danger" role="alert">註冊失敗，請再試一次！</div>');
                        setTimeout(function () { $('#msgregister').html(''); }, 3000);
                    }
                },
                error: function (result) {
                    $('#msgregister').html('<div class="alert alert-danger" role="alert">連線錯誤，請重開網頁再試一次</div>');
                    setTimeout(function () { $('#msgregister').html(''); }, 3000);
                }

            });
            return false;

        });

