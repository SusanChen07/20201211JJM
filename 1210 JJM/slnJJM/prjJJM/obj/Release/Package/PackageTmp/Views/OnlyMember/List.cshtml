@model prjJJM.ViewModels.CMemberViewModel

@{
    ViewBag.Title = "會員資料";
}

@section css{
    <link href="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.5/croppie.css" rel="stylesheet">
    <link href="~/Content/assets/css/member.css" rel="stylesheet" />
    <link href="~/Content/assets/css/all.min.css" rel="stylesheet" />
}


@section scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.5/croppie.min.js"></script>
}
<main id="main">
    <!-- ======= 頁面導航 Section ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2 style="font-weight: 700;">個人資料</h2>
                <ol>
                    <li><a href="@Url.Action("Index", "Home")" style="font-size:16px;">首頁</a></li>
                    <li><a href="#" style="font-size:16px;">個人檔案</a></li>
                    <li style="font-size:16px; font-weight: 600;">個人資料</li>
                </ol>
            </div>

        </div>
    </section><!-- End Section -->

    <section class="">
        <div class="container emp-profile">

                <form method="post">
                    <div class="row">
                        <div class="col-md-4">

                            @RenderPage("~/Views/Shared/_Layout_JJMMember.cshtml")

                        </div>

                    <div class="col-md-8">
                        <div class="profile-head">
                            <ul class="nav nav-tabs" id="myTab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab"
                                       aria-controls="home" aria-selected="true" style="font-size:1em;">個人資料</a>
                                </li>
                            </ul>
                        </div>
                        <div class="container profile-tab">
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <div class="row">
                                        <div class="col-4">
                                            <label>學員編號</label>
                                        </div>
                                        <div class="col-8">
                                            <p>@Model.memberID</p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4">
                                            <label>姓名</label>
                                        </div>
                                        <div class="col-8">
                                            <p>@Model.m_fullName</p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4">
                                            <label>生日</label>
                                        </div>
                                        <div class="col-8">
                                            <p>@Model.m_birth.Value.ToLongDateString()</p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4">
                                            <label>性別</label>
                                        </div>
                                        <div class="col-8">
                                            <p>@Model.m_gender</p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4">
                                            <label>電話</label>
                                        </div>
                                        <div class="col-8">
                                            <p>@Model.m_phone</p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4">
                                            <label>地址</label>
                                        </div>
                                        <div class="col-8">
                                            <p>@Model.m_address</p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4">
                                            <label>喜好</label>
                                        </div>
                                        <div class="col-8">
                                            <p>@Model.m_hobby</p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4">
                                            <label>點數</label>
                                        </div>
                                        <div class="col-8">
                                            <p>@Model.m_Jpoint</p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4">
                                            <label>Email</label>
                                        </div>
                                        <div class="col-8">
                                            <p>@Model.m_email</p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4">
                                            <label>密碼</label>
                                        </div>
                                        <div class="col-8">
                                            <p>@Model.m_password</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    </div>
                    <div class="row">
                        <div class="col-md-4"></div>
                        <div class="col-md-5"></div>
                        <div class="col-md-3">
                            <button class="profile-edit-btn">@Html.ActionLink("編輯資料", "Edit", new { id = Model.memberID })</button>
                        </div>
                    </div>
                </form>
            
        </div>
    </section>
    <!-- End Section -->
</main>
