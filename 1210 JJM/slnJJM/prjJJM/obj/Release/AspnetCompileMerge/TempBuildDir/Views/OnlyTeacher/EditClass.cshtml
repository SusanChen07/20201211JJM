        var inner = "";
        for (var i = 0; i < types.length; i++) {
            inner = inner + '<option>' + types[i] + '</option>';
        }
        typeSelect.innerHTML = inner;


        var sectors = new Array();
        sectors[0] = ['重訓', 'TRX', ' 瑜珈', ' 其它'];
        sectors[1] = ['拳擊 ', ' 武術 ', ' 其它 '];
