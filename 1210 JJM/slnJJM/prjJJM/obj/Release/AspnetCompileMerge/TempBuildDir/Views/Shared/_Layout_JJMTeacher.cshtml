@*@model prjJJM.ViewModels.CTeacherViewModel*@

<div class="profile-img">
    <img src="@((string)Session["Image"])"
         alt="" />
    <a href="@Url.Action("EditImg","OnlyMember")">
        <div class="file btn btn-lg btn-primary">
            <i class="fa fa-camera-retro" aria-hidden="true"></i>
            <p style="display:inline">上傳頭像</p>
            @*<input type="file" name="file" />*@
        </div>
    </a>
</div>
<div class="profile-work bigscreen1" style="text-align: center;">
    <p>個人檔案</p>
    @Html.ActionLink("個人資料", "List", "OnlyMember", new { id = (int)Session["ID"] }, null)<br />
    @Html.ActionLink("個人課程", "OnlyClass", "OnlyMember")<br />
    @*<a href="">訊息通知</a><br />*@
    @Html.ActionLink("查詢訂單", "orderDetail", "Shop")<br />
    @Html.ActionLink("健美點數", "List", "Point", new { id = (int)Session["ID"] }, null)<br />
    @if ((string)Session["Role"] == "1")
    {
        <a href="coach.html">成為教練</a>
    }

</div>
<div class="profile-work mobile1" style="text-align: center;">
    <p class="cotitle1"><a data-toggle="collapse" href="#collapse1"><i class="fa fa-th-list" aria-hidden="true"></i>個人檔案</a></p>
    <div id="collapse1" class="panel-collapse collapse">
        <ul class="list-group">
            <li class="list-group-item"> @Html.ActionLink("個人資料", "List", "OnlyMember", new { id = (int)Session["ID"] }, null)</li>
            <li class="list-group-item">@Html.ActionLink("個人課程", "OnlyClass", "OnlyMember")</li>
            @*<li class="list-group-item"><a href="">訊息通知</a></li>*@
        <li class="list-group-item">@Html.ActionLink("查詢訂單", "orderDetail", "Shop")</li>
            <li class="list-group-item">@Html.ActionLink("健美點數", "List", "Point", new { id = (int)Session["ID"] }, null)</li>
            @if ((string)Session["Role"] == "1")
            {
                <li class="list-group-item"><a href="coach.html">成為教練</a></li>
            }
        </ul>
    </div>
</div>
@if ((string)Session["Role"] == "2")
{
    <div class="profile-work bigscreen1" style="text-align: center;">
        <p>教練管理</p>
        @Html.ActionLink("教練資料", "List", "OnlyTeacher", new { id = (int)Session["ID"] }, null)<br />
        @Html.ActionLink("發佈課程", "CreateClass", "ClassMgt")<br />
        @Html.ActionLink("管理課程", "myClass", "OnlyTeacher")<br />
        @Html.ActionLink("教練請款", "money", "Point")<br/>
        @Html.ActionLink("教練公開", "OnlyList", "OnlyTeacher", new { id = (int)Session["ID"] }, null)<br />

</div>
    <div class="profile-work mobile1" style="text-align: center;">
        <p class="cotitle1"><a data-toggle="collapse" href="#collapse2"><i class="fa fa-th-list" aria-hidden="true"></i>教練管理</a></p>
        <div id="collapse2" class="panel-collapse collapse">
            <ul class="list-group">
                <li class="list-group-item">@Html.ActionLink("教練資料", "List", "OnlyTeacher", new { id = (int)Session["ID"] }, null)</li>
                <li class="list-group-item">@Html.ActionLink("發佈課程", "CreateClass", "ClassMgt")</li>
                <li class="list-group-item">@Html.ActionLink("管理課程", "myClass", "OnlyTeacher")</li>
                <li class="list-group-item">@Html.ActionLink("教練請款", "money", "Point")</li>
                <li class="list-group-item">@Html.ActionLink("教練公開", "OnlyList", "OnlyTeacher", new { id = (int)Session["ID"] }, null)</li>
            </ul>
        </div>
    </div>
}