@model prjJJM.ViewModels.ClassVM.CClassMgtImgViewModel

@{
    ViewBag.Title = "List網球";
}

<main id="main">
    <!-- ======= 進階篩選 ======= -->
    <div id="mySidenav" class="sidenav">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>

        <!-- <a href="#">About</a> -->
        <div class="row" style="margin-top: 10px;">
            <div class="col-1"></div>
            <div class="col-11" style="margin-left:25px;">
                @using (Html.BeginForm("List網球", "ClassMgt", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <!-- ======= 關鍵字 ======= -->
                    <div class="form-group" style="width: 250px;">
                        <label class="col-form-label">關鍵字搜尋</label>
                        <div class="form-group input-group" style="width: 250px;">
                            <input type="text" class="form-control" name="keywordPost" placeholder="請輸入關鍵字">
                            <div class="input-group-append">
                                <select class="btn btn-outline-secondary dropdown-toggle" name="種類Post">
                                    <option selected="selected" disabled>搜尋種類</option>
                                    <option value="1">運動類別</option>
                                    <option value="2">課程名稱</option>
                                    <option value="3">教練姓名</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <!-- ======= 日期 ======= -->
                    <div class="form-group" style="width: 250px;">
                        <label for="date-start" class="col-form-label">課程日期區間</label>
                        <div class="form-group input-group" style="width: 250px;">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="inputGroupSelect01">開始</label>
                            </div>
                            <input class="form-control" type="date" name="startdatePost" value="2020-12-11" id="date-start">
                        </div>
                        <div class="form-group input-group" style="width: 250px;">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="inputGroupSelect01">結束</label>
                            </div>
                            <input class="form-control" type="date" name="enddatePost" value="2021-02-28" id="date-end">
                        </div>
                    </div>
                    <!-- ======= 地區 ======= -->
                    <div class="form-group" style="width: 250px;">
                        <label class="col-form-label">教室位置</label>
                        <div class="input-group" style="width: 250px;">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="inputGroupSelect01">地區</label>
                            </div>
                            <select class="custom-select" name="areaPost" id="">
                                <option value="1" selected>所有高雄區</option>
                                <option value="2">左營區</option>
                                <option value="3">鼓山區</option>
                                <option value="4">三民區</option>
                                <option value="5">苓雅區</option>
                                <option value="6">新興區</option>
                                <option value="7">前金區</option>
                                <option value="8">鹽埕區</option>
                                <option value="9">其它區</option>
                            </select>
                        </div>
                    </div>
                    <!-- ======= 課程班別 ======= -->
                    <div class="form-group" style="width: 250px;">
                        <label class="col-form-label">課程班別</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <input type="radio" aria-label="Radio button for following text input" name="optionsRadios" id="optionsRadios1" value="option1" checked>
                                </div>
                            </div>
                            <input type="text" class="form-control" aria-label="Text input with radio button" value="所有課程" disabled>
                        </div>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <input type="radio" aria-label="Radio button for following text input" name="optionsRadios" id="optionsRadios2" value="option2">
                                </div>
                            </div>
                            <input type="text" class="form-control" aria-label="Text input with radio button" value="團體課程" disabled>
                        </div>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <input type="radio" aria-label="Radio button for following text input" name="optionsRadios" id="optionsRadios3" value="option3">
                                </div>
                            </div>
                            <input type="text" class="form-control" aria-label="Text input with radio button" value="一對一課程" disabled>
                        </div>
                    </div>
                    <br>
                    <div class="form-group mt-2" style="width: 250px;">
                        <button type="submit" class="btn btn-warning btn-block">開始搜尋</button>
                        <button type="reset" class="btn btn-secondary btn-block">重置欄位</button>
                    </div>
                }
            </div>

        </div>

    </div>
    <div id="overlay" onclick="off()"></div>

