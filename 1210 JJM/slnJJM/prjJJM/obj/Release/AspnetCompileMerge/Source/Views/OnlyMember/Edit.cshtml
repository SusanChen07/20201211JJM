@model prjJJM.ViewModels.CMemberViewModel
@{
    ViewBag.Title = "Edit";
}

@section css{
    <link href="~/Content/assets/css/member.css" rel="stylesheet" />
    <link href="~/Content/assets/css/all.min.css" rel="stylesheet" />
}


@using (Html.BeginForm("Edit", "OnlyMember", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
<main id="main">
    <!-- ======= 頁面導航 Section ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2 style="font-weight: 700;">編輯個人資料</h2>
                <ol>
                    <li><a href="@Url.Action("Index", "Home")" style="font-size:16px;">首頁</a></li>
                    <li><a href="@Url.Action("List", "OnlyMember", new { id = (int)Session["ID"]})" style="font-size:16px;">個人檔案</a></li>
                    <li style="font-size:16px; font-weight: 600;">編輯個人資料</li>
                </ol>
            </div>

        </div>
    </section><!-- End Section -->

    <section class="">
        <div class="container emp-profile">
            <form method="post">
                <div class="row">
                    <div class="col-md-4">

                       @RenderPage("~/Views/Shared/_Layout_JJMMember.cshtml")

                    </div>
                    <div class="col-md-8">
                        <div class="profile-head">
                            <ul class="nav nav-tabs" id="myTab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab"
                                       aria-controls="home" aria-selected="true" style="font-size:1em;">個人資料</a>
                                </li>
                            </ul>
                        </div>
                        <div class="container profile-tab">
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <div class="row">
                                        <div class="col-4">
                                            <label>學員編號</label>
                                        </div>
                                        <div class="col-8">
                                            <input type="hidden" name="memberID" value="@Model.memberID" />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4">
                                            <label>姓</label>
                                        </div>
                                        <div class="col-8">
                                            <p>
                                                @Html.EditorFor(model => model.m_lastName, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.m_lastName, "", new { @class = "text-danger" })
                                            </p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4">
                                            <label>名</label>
                                        </div>
                                        <div class="col-8">
                                            <p>
                                                @Html.EditorFor(model => model.m_firstName, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.m_firstName, "", new { @class = "text-danger" })
                                            </p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4">
                                            <label>生日</label>
                                        </div>
                                        <div class="col-8">
                                            <p>
                                                @Html.EditorFor(model => model.m_birth, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.m_birth, "", new { @class = "text-danger" })
                                            </p>
                                        </div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-4">
                                            <label>性別</label>
                                        </div>
                                        <div class="col-8">
                                            <label class="radio-inline mr-1">@Html.RadioButtonFor(model => model.m_gender, "男性", new { @class = "" })男性</label>
                                            <label class="radio-inline">@Html.RadioButtonFor(model => model.m_gender, "女性", new { @class = "" })女性</label>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4">
                                            <label>電話</label>
                                        </div>
                                        <div class="col-8">
                                            <p>
                                                @Html.EditorFor(model => model.m_phone, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.m_phone, "", new { @class = "text-danger" })
                                            </p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4">
                                            <label>地址</label>
                                        </div>
                                        <div class="col-8">
                                            <p>
                                                @Html.EditorFor(model => model.m_address, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.m_address, "", new { @class = "text-danger" })
                                            </p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4">
                                            <label>喜好</label>
                                        </div>
                                        <div class="col-8">
                                            <p>
                                                @Html.EditorFor(model => model.m_hobby, new { htmlAttributes = new { @class = "EditorFor" } })
                                                @Html.ValidationMessageFor(model => model.m_hobby, "", new { @class = "text-danger" })
                                            </p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4">
                                            <label>Email</label>
                                        </div>
                                        <div class="col-8">
                                            <p>
                                                @Html.DisplayFor(model => model.m_email, new { htmlAttributes = new { @class = "form-control" } })
                                            </p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4">
                                            <label>密碼</label>
                                        </div>
                                        <div class="col-8">
                                            <p>
                                                @Html.EditorFor(model => model.m_password, new { htmlAttributes = new { @class = "form-control", type="password" } })
                                                @Html.ValidationMessageFor(model => model.m_password, "", new { @class = "text-danger" })
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4"></div>
                    <div class="col-md-5"></div>
                    <div class="col-md-3">
                        <button class="profile-edit-btn" type="submit">儲存資料</button>
                    </div>
                </div>
            </form>
        </div>
    </section><!-- End Section -->
</main>
    }

@*<div>
    @Html.ActionLink("返回", "List")
</div>*@

@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")
}
