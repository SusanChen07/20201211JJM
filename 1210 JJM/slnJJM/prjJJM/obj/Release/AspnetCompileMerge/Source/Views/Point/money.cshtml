@model  prjJJM.ViewModels.PointVM.CPointViewModel

@{
    ViewBag.Title = "教練請款";

}

@section css{
    <link href="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.5/croppie.css" rel="stylesheet">
    <link href="~/Content/assets/css/point.css" rel="stylesheet" />
    <link href="~/Content/assets/css/all.min.css" rel="stylesheet" />
}


@section scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.5/croppie.min.js"></script>
}

<!--Body Start-->
<main id="main">

    <!-- ======= 頁面導航 Section ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2 style="font-weight: 700;">教練請款</h2>
                <ol>
                    <li><a href="@Url.Action("Index", "Home")" style="font-size:16px;">首頁</a></li>
                    <li><a href="@Url.Action("List","OnlyTeacher", new { id = (int)Session["ID"]})" style="font-size:16px;">教練管理</a></li>
                    <li style="font-size:16px; font-weight: 600;">教練請款</li>
                </ol>
            </div>

        </div>
    </section><!-- End Section -->

    <!-- ======= 空白Section ======= -->
    <section class="">
        <div class="container emp-profile">
            <form method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">

                        <!--共用導覽列-->
                        @RenderPage("~/Views/Shared/_Layout_JJMMember.cshtml")
                        <!--共用導覽列 End-->

                    </div>
                    <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8 entryp">
                        <div class="row mt-3">
                            <div class="col-lg-12">
                                <div class="row money1 mb-4">
                                    <div class="col-2 pr-1" style="text-align: right;">NT$</div>
                                    <div class="col-3 pr-1">
                                        <input class="input1" type="text" name="getPoint" placeholder="請輸入請款金額" style="width: 100%; text-align: right;">
                                    </div>
                                    <div class="col-2 pr-0 point1" style="text-align: center;">
                                        <button class="btnpoint"><i class="fas fa-long-arrow-alt-left"></i></button>
                                    </div>
                                    <div class="col-2 px-0" style="text-align: right;">可兌換點數</div>
                                    <div class="col-3 pointnow pl-1" style="text-align: center;">
                                        @Model.教練.t_money
                                    </div>
                                </div>
                                <div class="row mt-2 record1">
                                    <div class="col-12">
                                        <div class="row" style="font-weight: 800;">
                                            <div class="col-5" style="text-align: center;">日期</div>
                                            <div class="col-3" style="text-align: center;">請款紀錄</div>
                                            <div class="col-2" style="text-align: center;">請款金額</div>
                                            <div class="col-2" style="text-align: center;">狀態</div>
                                        </div>
                                        @foreach (var item in Model.請款)
                                        {
                                    <div class="row">
                                        <div class="col-5" style="text-align: center;">@item.p_getNow</div>
                                        <div class="col-3" style="text-align: center;">@item.p_method</div>
                                        <div class="col-2 store" style="text-align: center;">@item.p_money</div>
                                        <div class="col-2 store" style="text-align: center;">@item.p_status</div>
                                    </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section><!-- End Section -->
</main><!-- End #main -->
<!--Body End-->
