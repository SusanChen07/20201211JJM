@model  prjJJM.ViewModels.PointVM.CPointViewModel

@{
    ViewBag.Title = "儲值點數";

}

@section css{
    <link href="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.5/croppie.css" rel="stylesheet">
    <link href="~/Content/assets/css/point.css" rel="stylesheet" />
    <link href="~/Content/assets/css/all.min.css" rel="stylesheet" />
}


@section scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.5/croppie.min.js"></script>
}

<!--Body Start-->
<main id="main">

    <!-- ======= 頁面導航 Section ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2 style="font-weight: 700;">健美點數</h2>
                <ol>
                    <li><a href="@Url.Action("Index", "Home")" style="font-size:16px;">首頁</a></li>
                    <li><a href="@Url.Action("List", "OnlyMember", new { id = (int)Session["ID"]})" style="font-size:16px;">個人檔案</a></li>
                    <li style="font-size:16px; font-weight: 600;">健美點數</li>
                </ol>
            </div>

        </div>
    </section><!-- End Section -->
    <!-- ======= 空白Section ======= -->
    <section class="">
        <div class="container emp-profile">
            <form method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">

                        <!--共用導覽列-->
                            @RenderPage("~/Views/Shared/_Layout_JJMMember.cshtml")
                        <!--共用導覽列 End-->

                    </div>
                    <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8 entryp">
                        <div class="row mt-3">
                            <div class="col-lg-12">
                                <div class="row money1 mb-4">
                                    <div class="col-2 pr-1" style="text-align: right;">NT$</div>
                                    <div class="col-3 pr-1">
                                        <input class="input1" type="text" name="getPoint" placeholder="請輸入儲值金額" style="width: 100%; text-align: right;">
                                    </div>
                                    <div class="col-2 pr-0 point1" style="text-align: center;">
                                        <button class="btnpoint"><i class="fas fa-long-arrow-alt-right"></i></button>
                                    </div>
                                    <div class="col-2 px-0" style="text-align: right;">健美點數</div>
                                    <div class="col-3 pointnow pl-1" style="text-align: center;">
                                        @Model.會員.m_Jpoint
                                    </div>
                                </div>
                                <div class="row mt-2 record1">
                                    <div class="col-12">
                                        <div class="row" style="font-weight: 800;">
                                            <div class="col-6" style="text-align: center;">日期</div>
                                            <div class="col-3" style="text-align: center;">點數紀錄</div>
                                            <div class="col-3" style="text-align: center;">儲值</div>
                                        </div>
                                        @foreach (var item in Model.儲值)
                                        {
                                            <div class="row">
                                                    <div class="col-6" style="text-align: center;">@item.d_getNow</div>
                                                <div class="col-3" style="text-align: center;">@item.d_method</div>
                                                <div class="col-3 store" style="text-align: center;">@*+*@@item.d_point</div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section><!-- End Section -->
</main><!-- End #main -->
<!--Body End-->
